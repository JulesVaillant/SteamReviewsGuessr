<button id="runPythonScript">Mettre à jour la liste de jeux</button>

<script>
    document.getElementById('runPythonScript').addEventListener('click', function() {
        fetch('/runPythonScript')
            .then(response => {
                if (response.ok) {
                    return response.text();
                } else {
                    throw new Error('Erreur lors de l\'exécution du script Python.');
                }
            })
            .then(message => {
                alert(message); // ou utilisez une autre méthode pour afficher le message sur la page
            })
            .catch(error => {
                alert('Une erreur s\'est produite lors de l\'exécution du script Python.');
            });
    });
    </script>
    
    
